<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sellphone.CellData">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical">
            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:neumorph_shapeType="flat">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="bottom|center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#072CFB"
        android:fontFamily="@font/aclonica"
        android:text="Sell your Mobile With 3 Easy &amp;Simple Steps! ">
    </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="It's free and takes less than a minute"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:fontFamily="@font/aclonica">
        </TextView>
            </soup.neumorphism.NeumorphCardView>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_below="@id/l1"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp">


            <ImageView
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:src="@drawable/enteryourmobileinformation">

            </ImageView>
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Enter your Mobile Information"
                android:gravity="center"
                android:fontFamily="serif"
                android:textColor="@android:color/black">
            </TextView>

            <ImageView
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:src="@drawable/uploadphoto"></ImageView>

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Upload Photos"
                android:gravity="center"
                android:fontFamily="serif"
                android:textColor="@android:color/black">
            </TextView>

            <ImageView
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:src="@drawable/enteryourselligprice"></ImageView>
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Enter your Selling Price"
                android:gravity="center"
                android:fontFamily="serif"
                android:textColor="@android:color/black">
            </TextView>

        </LinearLayout>

       <soup.neumorphism.NeumorphCardView
           style="@style/Widget.Neumorph.CardView"
           android:id="@+id/card"
           android:layout_width="match_parent"
           android:layout_height="210dp"
           android:layout_below="@id/l2"
           android:layout_marginTop="40dp"
           app:cardCornerRadius="8dp"
           android:layout_marginStart="8dp"
           android:layout_marginEnd="8dp"
           app:neumorph_shapeType="flat">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
           <LinearLayout
               android:id="@+id/l3"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginStart="12dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                  android:text="Mobile Information"
                   android:textSize="16sp"
                   android:textStyle="bold"
                   android:textColor="@android:color/black"
                   android:fontFamily="serif">

               </TextView>

           </LinearLayout>


           <LinearLayout
               android:id="@+id/l4"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:orientation="horizontal"
               android:layout_below="@id/l3"
               android:layout_marginStart="16dp"
               >
               <TextView
                   android:layout_width="80dp"
                   android:layout_height="50dp"
                   android:gravity="center"
                   android:textStyle="bold"
                   android:text="City"/>
               <Spinner
                   android:id="@+id/spinnerCities"
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:entries="@array/Cities"
                   />

           </LinearLayout>

               <LinearLayout
               android:id="@+id/l5"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:orientation="horizontal"
               android:layout_below="@id/l4"
               android:layout_marginStart="16dp"
               >
               <TextView
                   android:layout_width="80dp"
                   android:layout_height="50dp"
                   android:gravity="center"
                   android:textStyle="bold"
                   android:text="Mobile Name"/>

                   <EditText
                       android:id="@+id/mobilename"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:hint="Brand/Model"
                       android:inputType="textPersonName"
                       android:maxLines="1"
                       ></EditText>
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/l55"
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:orientation="horizontal"
                   android:layout_below="@id/l5"
                   android:layout_marginStart="16dp"
                   >
                   <TextView
                       android:layout_width="80dp"
                       android:layout_height="50dp"
                       android:gravity="center"
                       android:textStyle="bold"
                       android:text="Mobile Info"/>

                   <EditText
                       android:id="@+id/mobileinfo"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:hint="Ram/Storage"
                       android:inputType="textPersonName"
                       android:maxLines="1"
                       ></EditText>

           </LinearLayout>

           </RelativeLayout>

       </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/card"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/l6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Enter Selling Price"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:fontFamily="serif">

                    </TextView>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/l7"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_below="@id/l6"
                    android:layout_marginStart="16dp"
                    >
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Price (Rs)"/>
                    <EditText
                        android:id="@+id/price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Price"
                        android:inputType="number"
                        android:maxLines="1">

                    </EditText>


                </LinearLayout>

            </RelativeLayout>

        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@id/card1"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:neumorph_shapeType="flat">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/l8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Upload Photos"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:fontFamily="serif">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/l9"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/l8"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginStart="12dp">
                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitEnd"
                        android:src="@drawable/uploadphoto1"></ImageView>
                    <Button
                        android:id="@+id/selectphoto"
                        android:layout_width="480dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="@android:color/holo_blue_bright"
                        android:text="+ Add Photos"></Button>
                </LinearLayout>

            </RelativeLayout>

        </soup.neumorphism.NeumorphCardView>
        <LinearLayout
            android:id="@+id/l10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/card2"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/uploadphoto1"
                android:visibility="gone"
                android:scaleType="fitCenter"></ImageView>
            <Button
                android:id="@+id/uploadphoto"
                android:layout_width="500dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="30dp"
                android:visibility="gone"
                android:backgroundTint="@android:color/holo_blue_bright"
                android:text="Upload Image"></Button>

        </LinearLayout>


        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/l10"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/l11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Contact Information"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:fontFamily="serif">

                    </TextView>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/l12"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_below="@id/l11"
                    android:layout_marginStart="16dp"
                    >
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Mobile Number"/>
                    <EditText
                        android:id="@+id/contact"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Mobile NUmber"
                        android:inputType="phone"
                        android:maxLines="1">

                    </EditText>


                </LinearLayout>

            </RelativeLayout>

        </soup.neumorphism.NeumorphCardView>

        <LinearLayout
            android:id="@+id/l13"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/card3"
            android:orientation="vertical"
            android:layout_marginEnd="10dp">

            <Button
                android:id="@+id/submait"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:text="SUBMIT &amp; CONTINUE"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"

                android:backgroundTint="@android:color/holo_blue_bright"></Button>
        </LinearLayout>


    </RelativeLayout>
</ScrollView>